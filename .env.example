# Supabase Configuration (canonical server-side names)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database URL (canonical name for all environments)
DATABASE_URL=postgresql://postgres:password@localhost:5432/coppercore_dev

# Environment
NODE_ENV=development

# Frontend-specific Vite variables (auto-prefixed for client bundle)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_URL=http://localhost:3001

# Storage bucket URL
VITE_STORAGE_URL=https://your-project.supabase.co/storage/v1

# MCP Server Configuration
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_ACCESS_TOKEN=your-supabase-access-token
OPENMEMORY_API_KEY=your-openmemory-api-key
TESTSPRITE_API_KEY=your-testsprite-api-key
GITHUB_TOKEN=your-github-token
WORKSPACE_ROOT=/path/to/project