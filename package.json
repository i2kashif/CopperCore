{
  "name": "coppercore-erp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite --port 3000",
    "dev:server": "tsx src/server/index.ts",
    "dev:full": "concurrently \"pnpm dev:server\" \"pnpm dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:rls": "tsx db/test/rls-tests.ts",
    "db:setup": "docker-compose up -d postgres && sleep 5",
    "db:setup-full": "tsx src/scripts/setup-db.ts setup",
    "db:bootstrap": "tsx src/scripts/migrate.ts bootstrap",
    "db:generate": "tsx src/scripts/generate.ts",
    "db:migrate": "tsx src/scripts/migrate.ts up",
    "db:apply": "tsx src/scripts/migrate.ts up",
    "db:verify": "tsx src/scripts/migrate.ts verify",
    "db:dry-run": "tsx src/scripts/migrate.ts dry-run",
    "db:rollback": "tsx src/scripts/migrate.ts rollback",
    "db:reset": "tsx src/scripts/migrate.ts reset && tsx src/scripts/migrate.ts up && pnpm db:seed",
    "db:seed": "tsx src/scripts/seed.ts seed",
    "db:seed:clean": "tsx src/scripts/seed.ts clean",
    "ci": "pnpm install && pnpm typecheck && pnpm lint && pnpm test:unit && pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^26.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}