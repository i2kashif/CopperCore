{
  "name": "coppercore-erp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:rls": "tsx db/test/rls-tests.ts",
    "db:generate": "tsx src/scripts/generate.ts",
    "db:migrate": "tsx src/scripts/migrate.ts up",
    "db:apply": "tsx src/scripts/migrate.ts up",
    "db:seed": "tsx src/scripts/seed.ts seed",
    "db:seed:clean": "tsx src/scripts/seed.ts clean",
    "db:verify": "tsx src/scripts/migrate.ts verify",
    "db:dry-run": "tsx src/scripts/migrate.ts dry-run",
    "db:reset": "tsx src/scripts/migrate.ts rollback && tsx src/scripts/migrate.ts up",
    "ci": "pnpm install && pnpm typecheck && pnpm lint && pnpm test:unit && pnpm db:migrate && pnpm db:seed"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.17.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-react": "^4.2.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^26.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}